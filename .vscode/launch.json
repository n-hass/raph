	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'raph'",
			"cargo": {
				"args": [
					"build",
					"--bin=_raph_bin",
					"--package=raph"
				],
				"filter": {
					"name": "_raph_bin",
					"kind": "bin"
				}
			},
			// "args": ["logr-sysadmin", "-n", "'echo hi'"],
			"args": ["logr-sysadmin", "-n", "\"echo hi\""],
			// "args": ["default"],
			// "args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'raph'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=_raph_bin",
					"--package=raph"
				],
				"filter": {
					"name": "_raph_bin",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}